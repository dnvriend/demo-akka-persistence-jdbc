<configuration debug="false">
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>debug</level>
        </filter>
        <encoder>
            <pattern>%date{ISO8601} - %logger -> %-5level[%thread] %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- <logger name="com.github.benmanes.caffeine" level="off" />-->
    <!--<logger name="org.github.mkubala" level="debug"/>-->
    <!--<logger name="akka.persistence.postgres" level="debug"/>-->
    <!--<logger name="akka.actor" level="debug"/>-->
    <!--<logger name="slick.backend.DatabaseComponent.action" level="debug" />-->
		<!--<logger name="slick" level="debug" />-->

    <root level="info">
        <appender-ref ref="console"/>
    </root>

</configuration>
